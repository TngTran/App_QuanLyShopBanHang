<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKy"
    android:id="@+id/layout_dangky"
    android:background="@color/beige">
    <TextView
        android:id="@+id/tvDangKytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="TẠO TÀI KHOẢN"
        android:textColor="@color/brown"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/edtTenNVdk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDangKytext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/brown"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="5dp"
        android:drawableTint="@color/brown"
        android:focusable="true"
        android:hint="Họ và tên"
        android:paddingLeft="10dp"
        android:textColor="@color/brown"
        android:textColorHint="@color/brown">

    </EditText>

    <EditText
        android:id="@+id/edtAccountdk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtGioiTinhdk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/brown"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="5dp"
        android:drawableTint="@color/brown"
        android:hint="Tên tài khoản"
        android:paddingLeft="10dp"
        android:textColor="@color/brown"
        android:textColorHint="@color/brown">

    </EditText>

    <EditText
        android:id="@+id/edtPassworddk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtAccountdk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/brown"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:drawableTint="@color/brown"
        android:hint="Mật khẩu"
        android:paddingLeft="10dp"
        android:textColor="@color/brown"
        android:textColorHint="@color/brown"
        android:inputType="textPassword"
        >

    </EditText>

    <EditText
        android:id="@+id/edtPasswordXNdk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassworddk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/brown"
        android:drawableLeft="@drawable/ic_baseline_verified_user_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/brown"
        android:hint="Xác nhận mật khẩu"
        android:paddingLeft="10dp"
        android:textColor="@color/brown"
        android:textColorHint="@color/brown"
        android:inputType="textPassword"
        >

    </EditText>

    <EditText
        android:id="@+id/edtEmaildk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSDTdk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/brown"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/brown"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:textColor="@color/brown"
        android:textColorHint="@color/brown">

    </EditText>

    <TextView
        android:id="@+id/edtGioiTinhdk"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/edtEmaildk"

        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/brown"
        android:drawableLeft="@drawable/ic_baseline_people_outline_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/brown"
        android:hint="Giới tính:"
        android:paddingLeft="10dp"
        android:textColor="@color/brown"
        android:textColorHint="@color/brown"
        android:textSize="19dp">

    </TextView>

    <RadioGroup
        android:id="@+id/rdoGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEmaildk"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@+id/edtGioiTinhdk"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdo_Nam"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_below="@+id/edtEmaildk"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/rdo_Nam"
            android:buttonTint="@color/brown"
            android:text="Nam"
            android:textColor="@color/brown"
            android:textSize="19dp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rdo_Nu"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_below="@+id/edtEmaildk"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/edtGioiTinhdk"
            android:buttonTint="@color/brown"
            android:text="Nữ"
            android:textColor="@color/brown"
            android:textSize="19dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/edtSDTdk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTenNVdk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/brown"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/brown"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColor="@color/brown"
        android:textColorHint="@color/brown">

    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDangKy"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPasswordXNdk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_style"
        android:text="Đăng ký"
        android:textColor="@color/brown" />

    <TextView
        android:id="@+id/tvHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDangKy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Bạn đã có tài khoản ?"
        android:textColor="@color/brown"

        />

</RelativeLayout>