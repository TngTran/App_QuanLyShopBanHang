<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_MaHD"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="MaHD"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Tien"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_MaHD"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Thành tiền:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/tv_NgayLap"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_MaHD"
        android:text="NgayLap"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ThanhTien"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_MaHD"

        android:layout_alignParentStart="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="20dp"
        android:text="ThanhTien"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingBottom="5dp"/>
    <ImageView
        android:id="@+id/img_EditHD"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_NgayLap"
        android:src="@drawable/imgedit"
        />

    <ImageView
        android:id="@+id/img_DeleteHD"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/img_EditHD"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/tv_ThanhTien"
        android:background="@drawable/imgedit2"
        android:paddingBottom="5dp"/>
</RelativeLayout>