<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_CTHDMaHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="MaHD"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_CTHDMaSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_CTHDMaHD"
        android:text="MaSP"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_CTHDSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_CTHDMaSP"
        android:text="SoLuong"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/tv_CTHDDonGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_CTHDSoLuong"
        android:text="DonGia"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="viewStart"/>

    <TextView
        android:id="@+id/tv_CTHDHienThiTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_CTHDSoLuong"
        android:layout_marginStart="-67dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/tv_CTHDSoLuong"
        android:text="Thành tiền:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/tv_CTHDThanhTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_CTHDSoLuong"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/tv_CTHDHienThiTT"
        android:text="ThanhTien"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:paddingBottom="10dp"/>
</RelativeLayout>