<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_HinhSPCustom"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_foreground"></ImageView>

    <TextView
        android:id="@+id/textView_MaSPCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img_HinhSPCustom"
        android:text="Mã sản phẩm:"
        android:textColor="@color/skyblue"
        android:textSize="22dp"
        android:textStyle="bold"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/textView_TenSPCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_MaSPCustom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/img_HinhSPCustom"
        android:text="Tên sản phẩm"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textView_GiaSPCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_TenSPCustom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/img_HinhSPCustom"
        android:text="Giá cả:"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="@color/teal_200"/>

    <ImageView
        android:id="@+id/imgView_Edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/img_HinhSPCustom"
        android:src="@drawable/imgedit" />

    <ImageView
        android:id="@+id/imgView_Delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imgView_Edit"
        android:layout_marginStart="175dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/img_HinhSPCustom"
        android:background="@drawable/imgedit2" />


</RelativeLayout>